#include <stdio.h>

int main() {
    int num1 = 10;
    int num2 = 5;
    char grade = 'B';
    int choice = 2;

    // 1. Simple if statement
    printf("--- Simple if statement ---\n");
    if (num1 > num2) {
        printf("%d is greater than %d.\n", num1, num2);
    }

    // 2. if-else statement
    printf("\n--- if-else statement ---\n");
    if (num2 > num1) {
        printf("%d is greater than %d.\n", num2, num1);
    } else {
        printf("%d is not greater than %d.\n", num2, num1);
    }

    // 3. else-if ladder
    printf("\n--- else-if ladder ---\n");
    if (grade == 'A') {
        printf("Excellent!\n");
    } else if (grade == 'B') {
        printf("Very good!\n");
    } else if (grade == 'C') {
        printf("Good.\n");
    } else {
        printf("Needs improvement.\n");
    }

    // 4. Nested if-else statement
    printf("\n--- Nested if-else statement ---\n");
    int age = 20;
    int hasLicense = 1; // 1 for true, 0 for false

    if (age >= 18) {
        printf("You are old enough to drive.\n");
        if (hasLicense) {
            printf("You have a driver's license.\n");
        } else {
            printf("You need to get a driver's license.\n");
        }
    } else {
        printf("You are not old enough to drive.\n");
    }

    // 5. switch-case statement
    printf("\n--- switch-case statement ---\n");
    switch (choice) {
        case 1:
            printf("You chose option 1.\n");
            break;
        case 2:
            printf("You chose option 2.\n");
            break;
        case 3:
            printf("You chose option 3.\n");
            break;
        default:
            printf("Invalid choice.\n");
            break;
    }

    return 0;
}
